{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "allowUnreachableCode": false,
    "composite": true,
    "customConditions": ["@stracker/__dev"],
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "inlineSources": true,
    "lib": ["es2020", "dom"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": false,
    "outDir": "./dist",
    "pretty": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "types": ["heft-jest", "node"],
    "noEmit": true
  }
}
